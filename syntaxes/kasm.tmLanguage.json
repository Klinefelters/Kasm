{
  "patterns": [
    {
      "name": "keyword.control.kasm",
      "match": "\\b(NOP|LDR|PUSH|POP|LDH|LDL|LDRL|LDRH|STR|JMP|IN|WIO|OUTL|OUT|END|OUTH|HALT|ADD|SUB|MUL|DIV|REM|SLL|SLR|SAR|AND|NAND|OR|NOR|XOR|XNOR|NMOV|MOV|CALL|BGT|BEQ|BLT|BSGT|BSEQ|INC|DEC|RST|BSLT)\\b"
    },
    {
      "name": "constant.numeric.kasm",
      "match": "\\b[0-9]+\\b"
    },
    {
      "name": "variable.name.kasm",
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    },
    {
      "name": "comment.line.semi-colon.kasm",
      "match": ";.*$"
    },
    {
      "name": "variable.register.kasm",
      "match": "\\bR[0-9]+\\b"
    },
    {
      "name": "variable.device.kasm",
      "match": "\\bD[0-9]+\\b"
    },
    {
      "name": "entity.name.section.kasm",
      "match": "\\bsection\\.[a-zA-Z0-9_]+\\b"
    },
    {
      "name": "entity.name.label.definition.kasm",
      "match": "^@[a-zA-Z0-9_]+"
    },
    {
      "name": "entity.name.label.reference.kasm",
      "match": "\\b[a-zA-Z0-9_]+\\b"
    },
    {
      "name": "entity.name.subroutine.kasm",
      "match": "^[a-zA-Z0-9_]+:"
    },
    {
      "name": "string.quoted.single.kasm",
      "match": "'[^']*'"
    },
    {
      "name": "string.quoted.double.kasm",
      "match": "\"[^\"]*\""
    }
  ],
  "scopeName": "source.kasm",
  "fileTypes": ["kasm"]
}