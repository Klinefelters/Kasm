{
  "patterns": [
    {
      "name": "keyword.control.kasm",
      "match": "\\b(NOOP|LOAD|LOADI|STORE|JMPIF|RIO|WIO|WIOI|HALT|ADD|SUB|MUL|DIV|REM|SLL|SLR|SAR|AND|NAND|ORR|NOR|XOR|XNOR|NMOV|MOV)\\b"
    },
    {
      "name": "constant.numeric.kasm",
      "match": "\\b[0-9]+\\b"
    },
    {
      "name": "variable.name.kasm",
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    },
    {
      "name": "comment.line.double-slash.kasm",
      "match": "//.*$"
    }
  ],
  "scopeName": "source.kasm",
  "fileTypes": ["kasm"]
}