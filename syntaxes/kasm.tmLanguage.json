{
  "patterns": [
    {
      "name": "keyword.control.kasm",
      "match": "\\b(new|In|Out|Jump|Halt|NoOp|Load|LoadL|Store)\\b"
    },
    {
      "name": "storage.type.kasm",
      "match": "\\b(register|address|device|int|char)\\b"
    },
    {
      "name": "variable.name.kasm",
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    },
    {
      "name": "constant.numeric.kasm",
      "match": "\\b[0-9]+\\b"
    },
    {
      "name": "comment.line.double-slash.kasm",
      "match": "//.*$"
    }
  ],
  "scopeName": "source.kasm",
  "fileTypes": ["kasm"]
}