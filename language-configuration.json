{
    "comments": {
        "lineComment": ";",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        // Increase indent for subroutine definitions and sections
        "increaseIndentPattern": "^(\\s*@\\w+:|.*\\bsection\\b.*)$",
        // Decrease indent for RTN and when a new section starts
        "decreaseIndentPattern": "^(\\s*RTN\\b.*|.*\\bsection\\b.*)$"
    },
    "folding": {
        "markers": {
            // Start folding at subroutine definitions
            "start": "^\\s*@\\w+:",
            // End folding at the RTN instruction
            "end": "^\\s*RTN\\b.*$"
        }
    }
}